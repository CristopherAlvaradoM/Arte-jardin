---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import ProyectosCard from "../components/ProyectosCard.astro";
import Footer from "../components/Footer.astro";
import Contactanos from "../components/Contactanos.astro";

const proyectos = [
  {
    nombre: "Jardín Zen",
    imagen: "/casota.png",
    alt: "Jardín estilo Zen",
    href: "#",
  },
  {
    nombre: "Terraza Verde",
    imagen: "/inicioServicio.png",
    alt: "Terraza con plantas",
    href: "#",
  },
  {
    nombre: "Jardín Zen",
    imagen: "/nosotros2.png",
    alt: "Jardín estilo Zen",
    href: "#",
  },
  {
    nombre: "Terraza Verde",
    imagen: "/servicios6.png",
    alt: "Terraza con plantas",
    href: "#",
  },
  {
    nombre: "Jardín Zen",
    imagen: "/alberca_sol.png",
    alt: "Jardín estilo Zen",
    href: "#",
  },
  {
    nombre: "Terraza Verde",
    imagen: "/nosotros.png",
    alt: "Terraza con plantas",
    href: "#",
  },
  {
    nombre: "Jardín Zen",
    imagen: "/servicios7.png",
    alt: "Jardín estilo Zen",
    href: "#",
  },
  {
    nombre: "Terraza Verde",
    imagen: "/alberca_sol.png",
    alt: "Terraza con plantas",
    href: "#",
  },
];
---

<Layout>
  <Navbar />

  <header
    class="relative py-40 flex flex-col items-center justify-center text-white"
  >
    <div class="absolute inset-0">
      <img
        src="/contactanos.png"
        alt="Una casa"
        class="w-full h-full object-cover brightness-50 pointer-events-none"
      />
    </div>

    <div class="relative z-10 text-center px-4">
      <h2 class="text-3xl md:text-6xl font-medium font-secondary mb-6 md:p-10">
        Proyectos
      </h2>
      <p class="text-lg md:text-3xl max-w-7xl">
        Descubre jardines donde arte y naturaleza se fusionan, creando espacios
        únicos con especies nativas, diseño sostenible y elementos artísticos.
      </p>
    </div>
  </header>

  <main class="px-6 md:px-10 py-16">
    <div
      class="grid gap-8 grid-cols-1 md:grid-cols-2 place-items-center mb-8 md:mb-16"
    >
      {
        proyectos.map((proyecto) => (
          <ProyectosCard
            nombre={proyecto.nombre}
            imagen={proyecto.imagen}
            alt={proyecto.alt}
            href={proyecto.href}
          />
        ))
      }
    </div>
    <Contactanos />
  </main>
</Layout>
