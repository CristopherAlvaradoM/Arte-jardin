---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import ClienteCard from "../components/ClientesCard.astro"
import { getCollection } from "astro:content";
import Contactanos from "../components/Contactanos.astro";

const clientes = await getCollection("clientes")
---

<Layout>
  <Navbar />

  <header
    class="relative py-40 flex flex-col items-center justify-center text-white"
  >
    <div class="absolute inset-0">
      <img
        src="/alberca_sol.png"
        alt="Una casa"
        class="w-full h-full object-cover brightness-50 pointer-events-none"
      />
    </div>

    <div class="relative z-10 text-center px-4">
      <h2 class="text-3xl md:text-6xl font-medium font-secondary mb-6 md:p-10">
        Testimonios de Clientes
      </h2>
      <p class="text-lg md:text-3xl max-w-8xl">
        Conoce las experiencias de nuestros clientes que han visto sus espacios transformarse en jardines que combinan 
        belleza, funcionalidad y conciencia ambiental.
      </p>
    </div>
  </header>

  <main class="px-6 md:px-10 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 place-items-center mb-8 md:mb-16">
    {
      clientes.map(({ data: { nombre, imagen, alt }, body }) => (
        <ClienteCard
          nombre={nombre}
          descripcion={body}
          imagen={imagen}
          alt={alt}
        />  
      ))
    }
    </div>
    <Contactanos/>
  </main>
</Layout>