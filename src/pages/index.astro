---
import { getCollection } from "astro:content";
import Navbar from "../components/Navbar.astro";
import Contactanos from "../components/Contactanos.astro";
import Layout from "../layouts/Layout.astro";
import ServiciosCard from "../components/ServiciosCard.astro";
import Footer from "../components/Footer.astro";
import WhatsappButton from "../components/WhatsappButton.astro";

const ordenTitulos = [
  "Venta e instalación de pasto en rollo",
  "Paisajismo Resiliente",
  "Integración artistica",
  "Mantenimiento de áreas verdes",
  "Diseño y construcción de jardines para polinizadores",
  "Diseño y construcción de jardines naturalistas",
];

const serviciosCardsInfo = await getCollection("servicios");
serviciosCardsInfo.sort((a, b) => {
  return Number(a.data.titulo) - Number(b.data.titulo);
});

const serviciosCardsOrdenados = serviciosCardsInfo.sort((a, b) => {
  const tituloA = a.data.titulo;
  const tituloB = b.data.titulo;

  return ordenTitulos.indexOf(tituloA) - ordenTitulos.indexOf(tituloB);
});
