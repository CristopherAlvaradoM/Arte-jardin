    </div>

    <!-- Enlaces -->
    <div class="space-y-2">
      <!-- Título para escritorio -->
      <h3 class="font-bold text-3xl font-secondary hidden md:block">
        Arte Jardín
      </h3>
      <!-- Título para móvil -->
      <h3 class="font-bold text-3xl font-secondary md:hidden">Arte Jardín</h3>

      <!-- Lista combinada para móvil -->
      <ul class="space-y-1 md:hidden">
        <li>
          <a href="/nosotros" class="hover:underline text-lg">Nosotros</a>
