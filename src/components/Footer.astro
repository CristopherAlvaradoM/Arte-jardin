      <div class="hidden md:grid grid-cols-2 gap-12">
        <ul class="space-y-1">
          <li>
            <a href="/nosotros" class="hover:underline text-lg">Nosotros</a>
          </li>
          <li>
            <a href="/servicios" class="hover:underline text-lg">Servicios</a>
          </li>
          <li>
            <a href="/proyectos" class="hover:underline text-lg">Proyectos</a>
          </li>
        </ul>
        <ul class="space-y-1">
          <li>
            <a href="/clientes" class="hover:underline text-lg">Clientes</a>
