---
const { nombre, imagen, alt, href } = Astro.props;
---

<a
  href={href}
  class="flex flex-col overflow-hidden hover:shadow-lg transition duration-300 w-full"
>
  <!-- Imagen del proyecto -->
  <img src={imagen} alt={alt} class="w-full h-60 md:h-[420px] object-cover" loading="lazy" />

  <!-- Contenedor texto + ícono -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between p-4 bg-white gap-2 md:gap-0">
    <!-- Título -->
    <span class="text-xl md:text-4xl text-green-900 font-secondary font-bold text-center md:text-left w-full">
      {nombre}
    </span>

    <!-- Flecha (desktop) -->
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="size-9 text-green-900 hidden md:block"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"
      />
    </svg>

    <!-- "Ver más" (mobile) -->
    <span class="underline text-center md:text-left text-green-900 text-base md:hidden">Ver más</span>
  </div>
</a>
